@model IEnumerable<YourProject.Models.Sach>
@{ ViewData["Title"] = "Danh sách Sách"; }
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row mb-3 align-items-center">
    <div class="col-md-4">
        <h1>Danh sách Sách</h1>
    </div>

   <div class="col-md-4">
    <form asp-action="Details" method="get">
        <div class="input-group">
            <input type="text" id="searchBox" class="form-control" placeholder="Tìm Kiếm...">
        </div>
    </form>
</div>

    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary">Thêm sách mới</a>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên sách</th><th>Năm xuất bản</th><th>Số lượng</th><th>Tác giả</th><th>Thể loại</th><th style="width: 300px;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TenSach)</td>
                <td>@Html.DisplayFor(modelItem => item.NamXuatBan)</td>
                <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                <td>@(item.TacGia?.TenTacGia)</td>
                <td>@(item.TheLoai?.TenTheLoai)</td>
                <td>
            <a asp-action="Edit" asp-route-id="@item.MaSach" class="btn btn-sm btn-outline-primary edit-button">Sửa</a>
            
            <form asp-action="Delete" asp-route-id="@item.MaSach" method="post" class="d-inline">
                <button type="submit" class="btn btn-sm btn-outline-danger" 
                        onclick="return confirm('Bạn có chắc chắn muốn xóa cuốn sách này không?');">
                    Xóa
                </button>
            </form>
            <a asp-action="Details" asp-route-id="@item.MaSach" class="btn btn-sm btn-outline-info">Chi tiết</a>
        </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg"><div class="modal-content">
      <div class="modal-header"><h5 class="modal-title">Sửa thông tin Sách</h5><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button></div>
      <div class="modal-body"></div>
  </div></div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Mở modal
            $('.edit-button').on('click', function (e) {
                e.preventDefault();
                var url = $(this).attr('href');
                $('#editModal .modal-body').load(url, function () {
                    $('#editModal').modal('show');
                });
            });

            // Xử lý submit form
            $('#editModal').delegate('#editForm', 'submit', function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#editModal').modal('hide');
                            Swal.fire({
                            title: 'Thành công!',
                            text: 'Cập nhật thông tin sách thành công.',
                            icon: 'success',
                            timer: 1500, // Thông báo tự tắt sau 1.5 giây
                            showConfirmButton: false
                        }).then(function () {
                            location.reload(); // Tải lại trang sau khi thông báo tắt
                        });
                        } else {
                            $('#editModal .modal-body').html(response);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi, vui lòng thử lại.'); // Thông báo thất bại
                    }
                });
            });
            $("#searchBox").autocomplete({
                source: function(request, response) {
                    $.ajax({
                        url: "@Url.Action("Search", "Sach")",
                        dataType: "json",
                        data: {
                            term: request.term
                        },
                        success: function(data) {
                            response(data);
                        }
                    });
                },
                minLength: 1, // Bắt đầu tìm khi gõ từ 2 ký tự
                select: function(event, ui) {
                    // Khi người dùng chọn một gợi ý, chuyển hướng đến trang chi tiết
                    if (ui.item) {
                        window.location.href = '/Sach/Details/' + ui.item.value;
                    }
                }
            });
        });
        
    </script>
    
}
