@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Báo cáo Sách quá hạn";
}

<div class="container mt-4">
    <h3 class="mb-3 text-danger">📚 Danh sách sách quá hạn</h3>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Mã Phiếu</th>
                <th>Tên Sách</th>
                <th>Độc Giả</th>
                <th>Ngày Mượn</th>
                <th>Hạn Trả</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaPhieu</td>
                        <td>@item.TenSach</td>
                        <td>@item.DocGia</td>
                        <td>@item.NgayMuon.ToString("dd/MM/yyyy")</td>
                        <td class="text-danger fw-bold">@item.HanTra.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        Không có sách quá hạn nào.
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="ExportExcel" asp-route-type="SachQuaHan" class="btn btn-success">
            <i class="bi bi-file-earmark-excel"></i> Xuất Excel
        </a>
        <a asp-action="Index" class="btn btn-secondary">⬅ Trở lại</a>
    </div>
</div>
