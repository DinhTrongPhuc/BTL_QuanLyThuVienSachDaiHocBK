@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Báo cáo Độc giả quá hạn";
}

<div class="container mt-4">
    <h3 class="mb-3 text-warning">👤 Báo cáo Độc giả quá hạn</h3>

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Tên Độc Giả</th>
                <th>Số Sách Quá Hạn</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DocGia</td>
                        <td class="fw-bold text-danger">@item.SoSachQuaHan</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center text-muted">
                        Không có độc giả nào quá hạn.
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="ExportExcel" asp-route-type="DocGiaQuaHan" class="btn btn-success">
            <i class="bi bi-file-earmark-excel"></i> Xuất Excel
        </a>
        <a asp-action="Index" class="btn btn-secondary">⬅ Trở lại</a>
    </div>
</div>
