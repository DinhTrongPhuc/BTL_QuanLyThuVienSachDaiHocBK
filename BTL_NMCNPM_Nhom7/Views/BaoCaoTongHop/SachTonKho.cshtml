@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Báo cáo Sách tồn kho";
}

<div class="container mt-4">
    <h3 class="mb-3 text-primary">🏷️ Báo cáo Sách tồn kho</h3>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Tên Sách</th>
                <th>Số Lượng Còn</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenSach</td>
                        <td class="fw-bold text-success">@item.SoLuongCon</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center text-muted">
                        Không có dữ liệu tồn kho.
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="ExportExcel" asp-route-type="SachTonKho" class="btn btn-success">
            <i class="bi bi-file-earmark-excel"></i> Xuất Excel
        </a>
        <a asp-action="Index" class="btn btn-secondary">⬅ Trở lại</a>
    </div>
</div>
