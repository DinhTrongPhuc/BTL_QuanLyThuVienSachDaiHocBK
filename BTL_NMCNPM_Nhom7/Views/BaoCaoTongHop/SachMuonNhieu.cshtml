@model IEnumerable<dynamic>

<h3>Top sách được mượn nhiều nhất</h3>
<div class="d-flex justify-content-end mb-3">
    <a asp-action="ExportSachMuonNhieuToExcel" class="btn btn-success me-2">
        <i class="bi bi-file-earmark-excel"></i> Xuất Excel
    </a>
    <a asp-action="ExportSachMuonNhieuToPdf" class="btn btn-danger">
        <i class="bi bi-file-earmark-pdf"></i> Xuất PDF
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Sách</th>
            <th>Tên Sách</th>
            <th>Số lượt mượn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Sach.MaSach</td>
                <td>@s.Sach.TenSach</td>
                <td>@s.SoLuotMuon</td>
            </tr>
        }
    </tbody>
</table>
