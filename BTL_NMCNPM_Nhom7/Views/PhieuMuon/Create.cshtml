@{
    ViewData["Title"] = "Tạo Phiếu Mượn";
    Layout = null; // Không sử dụng _Layout.cshtml
    var docGia = ViewBag.DocGia;
    var cart = ViewBag.Cart as List<YourProject.Models.Sach>;
    var thuThus = ViewBag.ThuThus as SelectList;
    var successMessage = ViewBag.SuccessMessage as string;
}
<!-- Thanh điều hướng trên cùng -->
<div style="width: 100%; background-color: #28a745; padding: 10px 20px; display:flex; justify-content: flex-end; gap: 10px; box-sizing:border-box;">
    <button onclick="window.location.href='@Url.Action("Cart", "MuonSach")'" 
            style="background-color:#ffc107; color:#000; font-weight:bold; border:none; border-radius:4px; padding:6px 12px; cursor:pointer;">
        Quay về giỏ hàng
    </button>

    <button onclick="window.location.href='@Url.Action("Logout", "Account")'" 
            style="background-color:#dc3545; color:white; font-weight:bold; border:none; border-radius:4px; padding:6px 12px; cursor:pointer;">
        Đăng xuất
    </button>
</div>


<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        background-color: #fff;
        padding: 25px;
        max-width: 500px;
        margin: 0 auto;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        position: relative;
    }

    label {
        font-weight: bold;
        display: block;
        margin-top: 15px;
        margin-bottom: 5px;
    }

    input, select, button {
        width: 100%;
        padding: 8px;
        font-size: 14px;
        border-radius: 4px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    button {
        background-color: #28a745;
        color: white;
        font-weight: bold;
        cursor: pointer;
        margin-top: 20px;
    }

        button:hover {
            background-color: #218838;
        }

   
    #successMessage {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
        text-align: center;
        display: none;
    }
</style>

<h2>Tạo Phiếu Mượn</h2>


@if (!string.IsNullOrEmpty(successMessage))
{
    <div id="successMessage">@successMessage</div>
}

<form asp-action="Create" method="post">
    <input type="hidden" name="docGiaId" value="@docGia.Id" />

    <div>
        <label>Độc giả:</label>
        <input type="text" value="@docGia.HoTen" readonly />
    </div>

    <div>
        <label>Ngày mượn:</label>
        <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
    </div>

    <div>
        <label>Ngày hẹn trả:</label>
        <input type="date" name="NgayHenTra" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>

    <div>
        <label>Thủ thư xử lý:</label>
        <select name="MaThuThu" required>
            <option value="">-- Chọn thủ thư --</option>
            @foreach (var t in thuThus)
            {
                <option value="@t.Value">@t.Text</option>
            }
        </select>
    </div>

<div>
    <label>Sách trong giỏ mượn:</label>
    @if (cart != null && cart.Any())
    {
        <ul style="list-style:none; padding-left:0; max-height:200px; overflow-y:auto; border:1px solid #ccc; padding:5px;">
            @foreach (var sach in cart)
            {
                <li>
                    <input type="checkbox" name="MaSachList" value="@sach.MaSach" id="sach_@sach.MaSach" />
                    <label for="sach_@sach.MaSach">@sach.TenSach (Còn @sach.SoLuong)</label>
                </li>
            }
        </ul>
        <small>Chọn một hoặc nhiều sách.</small>
    }
    else
    {
        <p>Giỏ sách trống. Vui lòng thêm sách trước khi tạo phiếu mượn.</p>
    }
</div>



    <button type="submit" @(cart == null || !cart.Any() ? "disabled" : "")>Tạo Phiếu Mượn</button>
</form>

<script>
    window.onload = function() {
        var msg = document.getElementById("successMessage");
        if(msg) {
            msg.style.display = "block";
            setTimeout(function() {
                msg.style.display = "none"; 
            }, 3000);
        }
    };
</script>
