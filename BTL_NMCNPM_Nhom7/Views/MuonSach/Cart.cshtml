@model List<YourProject.Models.Sach>

@{
    Layout = null; // Không sử dụng _Layout.cshtml
}

<div style="width: 100%; background-color: #28a745; padding: 10px 20px; display:flex; justify-content: flex-end; gap: 10px; box-sizing:border-box;">
    <button onclick="window.location.href='@Url.Action("Create", "PhieuMuon")'" 
            style="background-color:#ffc107; color:#000; font-weight:bold; border:none; border-radius:4px; padding:6px 12px; cursor:pointer;">
        Phiếu Mượn
    </button>

        <button onclick="window.location.href='@Url.Action("Index", "MuonSach")'" 
            style="background-color:#ffc107; color:#000; font-weight:bold; border:none; border-radius:4px; padding:6px 12px; cursor:pointer;">
        List Sách
    </button>

    <button onclick="window.location.href='@Url.Action("Logout", "Account")'" 
            style="background-color:#dc3545; color:white; font-weight:bold; border:none; border-radius:4px; padding:6px 12px; cursor:pointer;">
        Đăng xuất
    </button>
</div>

<div class="container mt-3">
    <h2>Giỏ mượn</h2>

    @if (!Model.Any())
    {
        <p>Giỏ mượn trống.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-info">
                <tr>
                    <th>Tên sách</th>
                    <th>Tác giả</th>
                    <th>Thể loại</th>
                    <th>Năm xuất bản</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.TenSach</td>
                        <td>@s.TacGia?.TenTacGia</td>
                        <td>@s.TheLoai?.TenTheLoai</td>
                        <td>@s.NamXuatBan</td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="@Url.Action("Create", "PhieuMuon")" class="btn btn-success">
    Xác nhận mượn sách
</a>


        @* <form asp-action="ConfirmBorrow" method="post">
            <button type="submit" class="btn btn-success">Xác nhận mượn sách</button>
        </form> *@
    }
</div>
