@{
    ViewData["Title"] = "Danh sách sách có thể mượn";
}

<div class="row mb-3 align-items-center">
    <div class="col-md-4">
        <h1>Danh sách Sách</h1>
    </div>

    <div class="col-md-5">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" id="searchBox" name="searchString" class="form-control" 
                   placeholder="Tìm theo tên sách, tác giả, thể loại..." 
                   value="@ViewData["CurrentFilter"]" />
            <button class="btn btn-primary ms-2" type="submit">Tìm kiếm</button>
        </form>
    </div>

    <div class="col-md-3 text-end">
        <a asp-action="Create" class="btn btn-primary">Thêm sách mới</a>
    </div>
</div>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>Tên sách</th>
            <th>Tác giả</th>
            <th>Thể loại</th>
            <th>Năm xuất bản</th>
            <th>Số lượng</th>
            <th>Mô tả</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenSach</td>
                <td>@(item.TacGia?.TenTacGia)</td>
                <td>@(item.TheLoai?.TenTheLoai)</td>
                <td>@item.NamXuatBan</td>
                <td>@item.SoLuong</td>
                <td>@item.MoTa</td>
                <td><a href="#" class="btn btn-success btn-sm">Thêm vào giỏ</a></td>
            </tr>
        }
    </tbody>
</table>
