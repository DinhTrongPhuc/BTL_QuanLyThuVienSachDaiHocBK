<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.3/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            background-color: #f4f7f6; /* Màu nền xám nhạt cho đẹp hơn */
        }
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed; /* Cố định sidebar */
            top: 0;
            left: 0;
            background-color: #1e3a5f; /* Màu xanh đậm của bạn */
            padding-top: 20px;
            color: white;
        }
        .sidebar h2 {
             padding: 0 15px;
        }
        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }
        .sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 16px;
            color: #b0bec5;
            display: block;
        }
        .sidebar a:hover {
            color: #ffffff;
            background-color: #2c5082;
        }
        .main-container {
            margin-left: 250px; /* Chừa không gian cho sidebar */
            width: calc(100% - 250px);
        }
        .top-header {
            background-color: white;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between; /* Đẩy nội dung ra 2 phía */
            align-items: center;
        }
        .page-content {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Library Management</h2>
        <ul>
            <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2"></i> <span>Dashboard</span></a></li>
            <li><a asp-controller="Sach" asp-action="Index"><i class="bi bi-book"></i> <span>Quản lý Sách</span></a></li>
            <li><a asp-controller="DocGia" asp-action="MainHome"><i class="bi bi-people"></i> <span>Quản lý Độc Giả</span></a></li>
            <li><a asp-controller="PhieuMuons" asp-action="Index1"><i class="bi bi-journal-text"></i> <span>Quản lý Phiếu mượn</span></a></li>
            <li><a asp-controller="BaoCaoTongHop" asp-action="Index"><i class="bi bi-bar-chart"></i> <span>Báo cáo thống kê</span></a></li>
            <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-people"></i> <span>Quản lý Thủ Thư</span></a></li>
            <li><a href="#"><i class="bi bi-gear"></i> <span>Cài đặt</span></a></li>
        </ul>
    </div>

    <div class="main-container">
       <header class="top-header">
    <h3>@ViewData["Title"]</h3>
    <div class="d-flex align-items-center">
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            // --- Nếu người dùng đã đăng nhập ---
            <span class="me-3">Chào, @User.Identity.Name</span>
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-outline-secondary btn-sm">Đăng xuất</button>
            </form>
        }
        else
        {
            // --- Nếu người dùng chưa đăng nhập ---
            <div>
                <a class="btn btn-light me-2" asp-controller="Account" asp-action="Register">Đăng ký</a>
                <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Đăng nhập</a>
            </div>
        }
    </div>
</header>
        <main role="main" class="page-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>