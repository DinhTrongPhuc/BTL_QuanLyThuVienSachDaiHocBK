<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5f8fa;
            margin: 0;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
            height: 100vh;
            background: linear-gradient(180deg, #007bff 0%, #0056b3 100%);
            color: white;
            transition: all 0.3s ease;
            overflow-y: auto;
            padding-top: 20px;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar h2 {
            text-align: center;
            font-size: 1.4rem;
            margin-bottom: 30px;
            transition: opacity 0.3s;
        }

        .sidebar.collapsed h2 {
            opacity: 0;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            margin: 12px 0;
        }

        .sidebar ul li a {
            color: white;
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 8px;
            transition: background 0.3s;
        }

        .sidebar ul li a:hover {
            background: rgba(255, 255, 255, 0.15);
        }

        /* Header */
        .header {
            background-color: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 12px 25px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-left: 250px;
            transition: margin-left 0.3s;
        }

        .collapsed + .header {
            margin-left: 70px;
        }

        /* Toggle Button */
        .toggle-btn {
            background: #007bff;
            color: white;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: background 0.3s;
        }

        .toggle-btn:hover {
            background: #0056b3;
        }

        /* Main content */
        .content {
            margin-left: 250px;
            padding: 25px;
            transition: margin-left 0.3s;
        }

        .collapsed + .header + .content {
            margin-left: 70px;
        }

        /* Scrollbar style */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background-color: rgba(255,255,255,0.3);
            border-radius: 4px;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h2><i class="bi bi-journal-bookmark"></i> Library</h2>
        <ul>
            <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2"></i> <span>Dashboard</span></a></li>
            <li><a asp-controller="Sach" asp-action="Index"><i class="bi bi-book"></i> <span>Quản lý Sách</span></a></li>
            <li><a asp-controller="DocGia" asp-action="MainHome"><i class="bi bi-people"></i> <span>Quản lý Độc Giả</span></a></li>
            <li><a asp-controller="PhieuMuons" asp-action="Index1"><i class="bi bi-journal-text"></i> <span>Quản lý Phiếu mượn</span></a></li>
            <li><a asp-controller="BaoCaoTongHop" asp-action="Index"><i class="bi bi-bar-chart"></i> <span>Báo cáo thống kê</span></a></li>
            <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-people"></i> <span>Quản lý Thủ Thư</span></a></li>
            <li><a href="#"><i class="bi bi-gear"></i> <span>Cài đặt</span></a></li>
        </ul>
    </div>

    <!-- Header -->
    <div class="header" id="header">
        <div class="d-flex align-items-center gap-3">
            <button class="toggle-btn" id="toggleSidebar"><i class="bi bi-list"></i></button>
            <h5 class="m-0 text-primary">Library Management System</h5>
        </div>
        <div>
            <span class="me-2">👤 Vai trò:</span>
            <a asp-controller="DocGia" asp-action="MainHome" class="btn btn-outline-primary btn-sm">Admin</a>
            <a asp-controller="MuonSach" asp-action="Index" class="btn btn-outline-secondary btn-sm">Guest</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content" id="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        const toggleBtn = document.getElementById('toggleSidebar');
        const sidebar = document.getElementById('sidebar');
        const header = document.getElementById('header');
        const content = document.getElementById('content');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            header.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
